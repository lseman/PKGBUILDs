# Maintainer: Laio O. Seman <laio [at] ieee.org>

_pkgname="hyprlang"
pkgname="${_pkgname}-git"
pkgver=v0.1.0.r7.g55e6ca0.git
pkgrel=1
pkgdesc="The hypr configuration language."
arch=(any)
url="https://github.com/hyprwm/hyprlang"
license=('BSD')
depends=(
	wayland
	libglvnd
	pango
	libjpeg
	libpng
)
makedepends=(
	git
	cmake
	ninja
	gcc
	gdb
	meson
	wayland-protocols
	xorgproto)
source=("${_pkgname}::git+https://github.com/hyprwm/hyprlang.git")
conflicts=("${_pkgname}")
provides=(hyprlang)
sha256sums=('SKIP')
#options=(!makeflags !buildflags !strip)

pkgver() {
  cd "$_pkgname"
  printf "%s.%sgit" "$(git describe --tags --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g')"
   #  echo $(git describe --tags --long | sed -e 's/-\([0-9]*\)-g\([0-9a-f]*\)$/r\1.\2/' -e 's/-/./g')
}

build() {
	cd "${srcdir}/${_pkgname}"
    cmake --no-warn-unused-cli -DCMAKE_BUILD_TYPE:STRING=Release -DCMAKE_INSTALL_PREFIX:PATH=${pkgdir}/usr -S . -B ./build
    cmake --build ./build --config Release --target hyprlang
}

package() {
	cd "${srcdir}/${_pkgname}"
    cmake --install ./build
}
